---
import BaseLayout from '../layouts/BaseLayout.astro';
import siteData from '../data/site.json';

const { sections } = siteData;
const campusLife = sections?.campusLife;
---

<BaseLayout title="Campus Life">
  <!-- Hero Section -->
  <section class="relative py-32 lg:py-48 bg-burgundy-800">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="max-w-3xl">
        <p class="text-sm uppercase tracking-widest text-burgundy-200 mb-4">Campus Life</p>
        <h1 class="hero-headline text-display-xl text-white">
          {campusLife?.headline || 'Campus Life'}
        </h1>
        <p class="mt-6 text-xl text-burgundy-100">
          {campusLife?.content || ''}
        </p>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  {campusLife?.features && campusLife.features.length > 0 && (
    <section class="py-20 lg:py-32 bg-cream-50">
      <div class="max-w-7xl mx-auto px-6 lg:px-12">
        <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
          {campusLife.features.map((feature, index) => (
            <div class="bg-white p-8 rounded-xl shadow-sm reveal" style={`animation-delay: ${index * 0.1}s`}>
              <h3 class="text-xl font-display text-charcoal-900 mb-3">{feature.title}</h3>
              <p class="text-charcoal-600">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Residential Life -->
  <section class="py-20 lg:py-32 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <div class="reveal">
          <p class="text-sm uppercase tracking-widest text-burgundy-600 mb-4">Boarding</p>
          <h2 class="section-headline text-display-lg text-charcoal-900">
            A Home Away From Home
          </h2>
          <p class="mt-6 text-lg text-charcoal-600 leading-relaxed">
            Our residential program creates a close-knit community where students form lifelong friendships and develop independence. Faculty members live on campus and serve as dorm parents, providing mentorship and support.
          </p>
          <ul class="mt-6 space-y-3">
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-burgundy-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-charcoal-600">12 dormitories across campus</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-burgundy-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-charcoal-600">Faculty families in residence</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-burgundy-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-charcoal-600">Weekend activities and excursions</span>
            </li>
          </ul>
        </div>
        <div class="reveal" style="animation-delay: 0.2s">
          <img 
            src="/images/dorm-life.jpg"
            alt="Student Life in the Dorms"
            class="w-full rounded-2xl shadow-xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Student Organizations -->
  <section class="py-20 lg:py-32 bg-charcoal-900 text-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="text-center mb-12 reveal">
        <p class="text-sm uppercase tracking-widest text-burgundy-400 mb-4">Get Involved</p>
        <h2 class="section-headline text-display-lg text-white">
          60+ Clubs & Organizations
        </h2>
        <p class="mt-4 text-xl text-slate-300 max-w-2xl mx-auto">
          From debate to robotics, community service to cultural clubs, there's something for everyone.
        </p>
      </div>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 reveal" style="animation-delay: 0.2s">
        {['Debate Society', 'Model UN', 'Robotics Club', 'Literary Magazine', 'Community Service', 'Cultural Clubs', 'Music Ensembles', 'Theater Productions'].map((club) => (
          <div class="p-4 border border-charcoal-700 rounded-lg text-center hover:border-burgundy-500 transition-colors">
            <span class="text-white">{club}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Arts Section -->
  <section class="py-20 lg:py-32 bg-cream-50">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <div class="order-2 lg:order-1 reveal" style="animation-delay: 0.2s">
          <img 
            src="/images/arts-performance.jpg"
            alt="Arts Performance"
            class="w-full rounded-2xl shadow-xl"
          />
        </div>
        <div class="order-1 lg:order-2 reveal">
          <p class="text-sm uppercase tracking-widest text-burgundy-600 mb-4">The Arts</p>
          <h2 class="section-headline text-display-lg text-charcoal-900">
            Creativity & Expression
          </h2>
          <p class="mt-6 text-lg text-charcoal-600 leading-relaxed">
            Our arts program provides opportunities for students at all levels to explore music, theater, dance, and visual arts. With state-of-the-art facilities and dedicated faculty, students develop their creative voices.
          </p>
          <div class="mt-8 grid grid-cols-2 gap-4">
            <div>
              <div class="text-3xl font-display text-burgundy-700">4</div>
              <p class="text-sm text-charcoal-600">Annual productions</p>
            </div>
            <div>
              <div class="text-3xl font-display text-burgundy-700">15+</div>
              <p class="text-sm text-charcoal-600">Music ensembles</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
